extends layout 
block content 
  h1 #{title}:#{genre.name}
  if books_list.length
    p #[strong Delete the following books before attempting to delete this genre.]
    div(style="margin-top:20px;margin-left:20px;")
      each book in books_list 
        div 
          h4 
            a(href=book.url) #{book.title}
          p #{book.summary} 
  else 
    p Are you sure you what to delete this genre?
    form(method="POST")
      button.btn.btn-primary(type='submit') Delete Genre
